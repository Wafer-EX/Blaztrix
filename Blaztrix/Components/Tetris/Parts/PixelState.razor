@using Engine;

<div class="pixel @GetStyle()" />

@code {
    [Parameter]
    public Pixel State { get; set; }

    private string GetStyle()
    {
        switch (State)
        {
            case Pixel.Filled: return "pixel-filled";
            case Pixel.CurrentBlock: return "pixel-current-block";
            default: return null;
        }
    }
}